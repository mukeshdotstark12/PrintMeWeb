@using Kentico.PageBuilder.Web.Mvc
@using Kentico.Web.Mvc
@using CMS.Helpers;
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ bool isRtl = System.Threading.Thread.CurrentThread.CurrentCulture.TextInfo.IsRightToLeft;}

<style>
    :root {
        --landing-page-1: url(@Model.LandingImageUrl);
    }
</style>

<!--Home page banner-->
<div class="lannding-page-bg" style="background-image: url(@Model.LandingImageUrl);">
    <div class="container">
        <div class="col-lg-6 col-7 pull-right landing-page-heading font-primary-medium ltr align-items-center">
            <h1 class="home-heading-text heavy-font">
                @ResHelper.GetString(@Model.Heading)  <br>
                @Html.Raw(@Model.Text)
            </h1>
        </div>
    </div>
</div>
<!--Home page banner-->
