    @{

        var controllerName = RouteTable.Routes.GetRouteData(new HttpContextWrapper(HttpContext.Current)).Values["controller"].ToString();
    }

    <!-- Syncfusion Essential JS 2 Styles -->
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/material.css" />
    <link rel="stylesheet" href="~/Content/css/rating-style.css" />

    <!-- Syncfusion Essential JS 2 Scripts -->
    <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/jquery.slick/1.4.1/slick.css" />
    <link href="~/Content/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-4">
                </div>
                <div class="col-lg-6 col-md-6 col-4">
                    <div class="logo-n-nav">
                        <div class="logo">
                            <a href="@Url.Action("Index","Home")"><img class="ECS-logo-sm" src="~/Content/Images/logo.png" style="height:100px;width:100px;" /></a>
                        </div>
                    </div>
                </div>

                @*<div class="col-lg-3 col-md-3 col-12">
                        <div class="account-n-language">
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @ResHelper.GetString("PrintForMe.Language")
                                </a>
                                <div class="font-primary-medium dropdown-menu" aria-labelledby="navbarDropdown">
                                    <div id="divArabic" class="dropdown-item">
                                        @Html.CultureLink(@ResHelper.GetString("PrintForMe.Arabic"), "ar-SA")
                                    </div>
                                    <div id="divEnglish" class="dropdown-item">
                                        @Html.CultureLink(@ResHelper.GetString("PrintForMe.English"), "en-US")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>*@
            </div>
        </div>
    </header>
    <div class="faq-question-wrapper">
        <div dir="@(isRtl? "rtl" : "ltr")" class="@(isRtl? "rtl" : "ltr")">
            <div class="container">
                <div class="row faq-tabs-row">
                    <div class="col-lg-3 col-md-4 col-12">
                        <ul class="nav nav-pills faq-tabs" id="pills-tab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <a class="nav-link active" id="pills-ShipReplace-tab" data-toggle="pill" href="#pills-ShipReplace" role="tab" aria-controls="pills-ShipReplace" aria-selected="true">@ResHelper.GetString("PrintForMe.ShipReplace")</a>
                                <span class="gray-block-icon-section"><img src="~/Content/Icons/Path.svg" /></span>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="pills-Payment-tab" data-toggle="pill" href="#pills-Payment" role="tab" aria-controls="pills-Payment" aria-selected="false">@ResHelper.GetString("PrintForMe.PaymentOptions")</a>
                                <span class="gray-block-icon-section"><img src="~/Content/Icons/Path.svg" /></span>
                            </li>
                            <li class="nav-item" role="presentation">
                                <a class="nav-link" id="pills-CommonQuestions-tab" data-toggle="pill" href="#pills-CommonQuestions" role="tab" aria-controls="pills-CommonQuestions" aria-selected="false">@ResHelper.GetString("PrintForMe.CommonQuestions")</a>
                                <span class="gray-block-icon-section"><img src="~/Content/Icons/Path.svg" /></span>
                            </li>
                        </ul>
                    </div>

                    <div class="col-lg-8 col-md-7 col-12 content-col-tab">
                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="pills-ShipReplace" role="tabpanel" aria-labelledby="pills-ShipReplace-tab">
                                <div class="content-pills-heading">
                                    <h2>@ResHelper.GetString("PrintForMe.ShipReplace")</h2>
                                </div>
                                <div class="content-pills-inner">
                                    @Html.Kentico().EditableArea("area1")
                                </div>
                            </div>

                            <div class="tab-pane fade" id="pills-Payment" role="tabpanel" aria-labelledby="pills-Payment-tab">
                                <div class="content-pills-heading">
                                    <h2>@ResHelper.GetString("PrintForMe.PaymentOptions")</h2>
                                </div>
                                <div class="content-pills-inner">
                                    <div id="paymentMethod">
                                        @foreach (var item in Model.PaymentOptions)
                                        {
                                            <h2>
                                                @ResHelper.GetString(@item.DisplayName)
                                            </h2>
                                            <p>
                                                @ResHelper.GetString(@item.Description)
                                            </p>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="pills-CommonQuestions" role="tabpanel" aria-labelledby="pills-CommonQuestions-tab">
                                <div class="content-pills-heading">
                                    <h2>@ResHelper.GetString("PrintForMe.CommonQuestions")</h2>
                                </div>
                                <div class="content-pills-inner">
                                    @foreach (var item in Model.Questions)
                                    {
                                        <h2>
                                            Q: @ResHelper.GetString(@item.Question)
                                        </h2>
                                        <p>
                                            A: @ResHelper.GetString(@item.Answer)
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
