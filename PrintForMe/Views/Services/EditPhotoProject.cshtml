                    showLoader();
                    formData.append('croppedImage', blob);
                    formData.append('imageName', "~/PrintForMe/PhotoProject/" + imgsource);
                    formData.append('ImageSrc', image.src);

                    fetch("/en-US/Services/UploadCroppedFiles",
                        {
